@page "/profile"
@rendermode InteractiveServer

<div class="container mt-5">
    <div class="row">
        <!-- Sidebar with Quick Actions -->
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5>Quick Actions</h5>
                </div>
                <div class="list-group list-group-flush">
                    <a href="/products/create" class="list-group-item list-group-item-action">Add New Product</a>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <!-- Company Overview Card -->
            <div class="card mb-4 shadow-sm">
                <div class="card-header">
                    <h5>Your profile</h5>
                </div>
                <div class="card-body">
                    <h3>@Model.FullName</h3>
                    <p><strong>Email: </strong>@Model.Email</p>
                    <p><strong>Joined on: </strong>@Model.JoinedOn.ToLocalTime().ToString("dd/MM/yyyy")</p>
                    @if (!string.IsNullOrEmpty(Model.Company))
                    {
                        <p><strong>Company:</strong> @Model.Company</p>
                    }
                </div>
            </div>

            <!-- Newest Products Card -->
            <div class="card mb-4 shadow-sm">
                <div class="card-header">
                    <h5>Your Newest Products</h5>
                </div>
                <div class="card-body">
                    @if (Model.NewestProducts.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Product Name</th>
                                        <th>Description</th>
                                        <th>Price</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model.NewestProducts)
                                    {
                                        <tr style="cursor: pointer;">
                                            <td>@product.Name</td>
                                            <td>@product.Category</td>
                                            <td>@product.Price.ToString()</td>
                                            <td><a class="btn btn-sm btn-primary" href="/products/details/@product.Id">View</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p>No new products available.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
